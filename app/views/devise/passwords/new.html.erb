<div class="columns is-mobile is-centered">
  <div class="column" style="max-width: 500px">
    <div class="box">
      <h2 class="subtitle">Forgot your password?</h2>
      <p class="mb-4">Enter your email below to receive reset password instructions</p>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <%= f.input :email, autofocus: true %>

        <div class="field pt-4">
          <%= f.button :submit, "Receive instructions", class: "is-primary is-fullwidth" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
