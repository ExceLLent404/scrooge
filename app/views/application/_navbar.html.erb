<nav class="navbar has-shadow" data-controller="navbar">
  <% if user_signed_in? %>
    <div class="container">
      <div class="navbar-brand">
        <%= render "app_logo" %>

        <a class="navbar-burger" data-navbar-target="burger" data-action="navbar#toggle">
          <span></span>
          <span></span>
          <span></span>
          <span></span>
        </a>
      </div>

      <div class="navbar-menu pl-3" data-navbar-target="menu">
        <div class="navbar-start">
          <%= link_to "Capital", "#", class: "navbar-item is-tab" %>
