<nav class="navbar has-shadow" data-controller="navbar">
  <% if user_signed_in? %>
    <div class="container">
      <div class="navbar-brand">
        <%= render "app_logo" %>

        <a class="navbar-burger" data-navbar-target="burger" data-action="navbar#toggle">
          <span></span>
          <span></span>
          <span></span>
          <span></span>
        </a>
      </div>

      <div class="navbar-menu pl-3" data-navbar-target="menu">
        <div class="navbar-start">
          <%= menu_item(:capital) %>
          <%= menu_item(:accounts) %>
          <%= menu_item(:transactions) %>
          <%= menu_item(:categories) %>
        </div>

        <div class="navbar-end is-flex is-justify-content-space-between">
          <%= link_to current_user.name, edit_user_registration_path, class: "navbar-item" %>

          <div class="navbar-item">
            <%= link_to t("devise.shared.links.sign_out"),
                        destroy_user_session_path,
                        class: "button is-dark is-outlined",
                        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="container is-block">
      <div class="navbar-brand is-flex is-justify-content-space-between">
        <%= render "app_logo" %>

        <div class="navbar-item">
          <div class="buttons">
            <%= link_to t("devise.shared.links.sign_up"), new_user_registration_path, class: "button is-link" %>
            <%= link_to t("devise.shared.links.sign_in"), new_user_session_path, class: "button is-link is-outlined" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</nav>
